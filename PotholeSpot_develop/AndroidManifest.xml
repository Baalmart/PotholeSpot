<?xml version="1.0" encoding="utf-8"?>
<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.potholespot.uganda"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="2016.04.29" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="4" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:allowClearUserData="true"
        android:description="@string/app_name"
        android:hardwareAccelerated="true"        
        android:label="@string/app_name"         
        android:theme="@style/AppTheme" 
        android:icon="@drawable/ph3" 
        android:allowBackup="true"         
        >
        <uses-library android:required="true" android:name="com.google.android.maps" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".viewer.TrackList" />
        <meta-data
            android:name="CLOUDMADE_KEY"
            android:value="534dfce474894e218f363a5473248ff6" />
    
         <activity 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" 
            android:label="@string/app_name" 
            android:name="com.potholespot.SplashScreen" 
            android:screenOrientation="portrait">            
            <intent-filter>
                <action 
                    android:name="android.intent.action.MAIN" />
                <category 
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>            
        </activity>
    
        <activity
            android:name="dev.potholespot.android.viewer.map.CommonLoggerMap"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            
             <intent-filter android:label="Show track on map" >
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="content" />
                <data android:host="dev.potholespot.android" />
                <data android:mimeType="vnd.android.cursor.item/vnd.nl.sogeti.android.track" />
            </intent-filter>            
            
             <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.potholespot.MainActivity" />
             
            <!-- <intent-filter android:label="Show track on map" >
                <action android:name="android.intent.action.VIEW" />
                
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="content" />
                <data android:host="dev.baalmart.gps" />
                <data android:mimeType="vnd.android.cursor.item/vnd.nl.dev.baalmart.gps.track" />
            </intent-filter> -->
        </activity>
        
     <!--      for the original prim -->
          
        <activity 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" 
            android:name="com.prim.Login" 
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.prim.MainActivity" 
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.prim.IssueList" 
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.prim.IssueDetail" 
            android:screenOrientation="portrait" />
       
        <activity
            android:name="dev.potholespot.android.viewer.map.GoogleLoggerMap"
            android:label="@string/app_name"
            android:launchMode="singleTask"
             >
           <!--   android:theme="@style/Theme.NoBackground" -->
        </activity>
        
        <activity
            android:name="dev.potholespot.android.viewer.map.OsmLoggerMap"
            android:label="@string/app_name"
            android:launchMode="singleTask"
             >
           <!--  android:theme="@style/Theme.NoBackground" -->
        </activity>
        <activity
            android:name="dev.potholespot.android.viewer.map.MapQuestLoggerMap"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            >
           <!--  android:theme="@style/Theme.NoBackground" --> 
        </activity>
        
        <activity
            android:name="dev.potholespot.android.viewer.ApplicationPreferenceActivity"
            android:label="@string/menu_settings" />
        <activity
            android:name="dev.potholespot.android.actions.NameRoute"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="dev.potholespot.android.actions.DescribeRoute"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="dev.potholespot.android.actions.ControlLogging"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="dev.potholespot.android.actions.ManualMode"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        
         <activity
            android:name="dev.potholespot.android.viewer.About"
            />
         <!-- android:theme="@android:style/Theme.Translucent.NoTitleBar"  -->
                 
        <activity
            android:name="dev.potholespot.android.viewer.RouteList"
            android:label="@string/track_list"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.gpx" />
                <data android:host="*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="text/xml" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="dev.potholespot.android.viewer.RoutesLiveFolder"
            android:icon="@drawable/icon"
            android:label="@string/track_list" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_LIVE_FOLDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.potholespot.android.actions.Statistics"
            android:label="@string/menu_statistics" >
        </activity>
        <activity
            android:name="dev.potholespot.android.actions.ShareRoute"
            android:exported="false"
            android:label="@string/share_track"
            android:windowSoftInputMode="stateUnchanged" >
            <intent-filter>
                <action android:name="android.intent.action.RUN" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.nl.sogeti.android.track" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.potholespot.android.oauth.PrepareRequestTokenActivity"
            android:exported="true"
            android:label="@string/authentication_redirect"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="x-oauthflow-opengpstracker" />
            </intent-filter>
        </activity>
        
        <!-- *********************************
              this is the database management tool which I will use
              ***************************************
               -->
               
        <activity android:name="dev.potholespot.android.db.AndroidDatabaseManager" 
          android:theme="@style/Theme.AppCompat.Light"/>
        
        
         <activity 
            android:label="@string/app_name" 
            android:name="com.potholespot.MainActivity" 
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.potholespot.Setting" 
            android:screenOrientation="portrait" />
        
        <activity
            android:name="dev.potholespot.android.db.sync.MainActivity"
            android:label="@string/app_name" android:noHistory="true"/>
        
        <service
            android:name="dev.potholespot.android.logger.GPSLoggerService"
            android:enabled="true"
            android:permission="android.permission.ACCESS_FINE_LOCATION" >
            <intent-filter android:label="GPS logger" >
                <action android:name="dev.potholespot.android.intent.action.GPSLoggerService" >
                </action>
                
       
            </intent-filter>
        </service>
        <service android:name="dev.potholespot.android.breadcrumbs.BreadcrumbsService" />

        <provider
            android:name="dev.potholespot.android.db.PspotProvider"
            android:authorities="dev.potholespot.uganda"
            android:enabled="true"
            android:permission="android.permission.ACCESS_FINE_LOCATION" >
            <grant-uri-permission android:pathPrefix="/tracks/" />
            
            <!-- nl.sogeti.android.gpstracker -->

            <path-permission
                android:path="/search_suggest_query"
                android:readPermission="android.permission.GLOBAL_SEARCH" />
            <path-permission
                android:path="/live_folders/tracks"
                android:readPermission="android.permission.BIND_APPWIDGET" />
        </provider>
        
        <!-- Register MyService -->
        <service
            android:name="dev.potholespot.android.db.sync.MyService"
            android:enabled="true" />
        
		<!--  Register BroadCase Receiver -->
        <receiver
            android:name="dev.potholespot.android.db.sync.SampleBC"
            android:process=":remote" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        
        

        <!-- This is used to auto start the application at boot -->
        <receiver
            android:name="dev.potholespot.android.util.BootReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- This is used to auto start the application at boot -->
        <receiver
            android:name="dev.potholespot.android.util.DockReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.DOCK_EVENT" />
            </intent-filter>
        </receiver>

        <!-- This receiver defines the app widget and the broadcasts it receives -->
        <receiver
            android:name="dev.potholespot.android.widget.ControlWidgetProvider"
            android:exported="false"
            android:label="Logger control" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="dev.potholespot.android.LOGGING_STATE_CHANGED" />
            </intent-filter>
            
            <!-- nl.sogeti.android.gpstracker -->

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/control_appwidget_info" />
        </receiver>
    </application>

</manifest>
