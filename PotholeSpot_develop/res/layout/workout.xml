<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:background="@color/background" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        
        <LinearLayout 
            android:gravity="center" 
            android:orientation="vertical" 
            android:id="@+id/time" 
            android:background="@drawable/image" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <TextView 
                android:textColor="@color/white" 
                android:id="@+id/textView1" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="DURATION" />
            
            <TextView 
                android:textSize="50.0sp" 
                android:textStyle="normal" 
                android:textColor="@color/white" 
                android:id="@+id/textView2" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="2:10:44" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <Button 
                android:id="@+id/pause" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="PAUSE" 
                android:layout_weight="1.0" 
                style="@style/btn_dark" />
            
            <Button 
                android:id="@+id/finish" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="FINISH" 
                android:layout_weight="1.0" 
                style="@style/btn_yellow" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            
            <TextView 
                android:id="@+id/textView3" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="DISTANCE" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
            <TextView 
                android:id="@+id/textView4" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="AVG. SPEED" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="5.0dip" 
            android:layout_weight="1.0">
            
            <TextView 
                android:id="@+id/textView5" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="3.14km" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
            <TextView 
                android:id="@+id/textView6" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="8.15km/h" 
                android:layout_weight="1.0"
                style="@style/lbl_workout2" />
            
        </LinearLayout>
                
        <View 
            android:id="@+id/view1" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:layout_marginTop="10.0dip" />
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            
            <TextView 
                android:id="@+id/textView7" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="CALORIES" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
            <TextView 
                android:id="@+id/textView8" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="MAX SPEED" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="5.0dip" 
            android:layout_weight="1.0">
            
            <TextView 
                android:id="@+id/textView9" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="326" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
            <TextView 
                android:id="@+id/textView10" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="9.256km/h" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
        </LinearLayout>
        
        <View 
            android:id="@+id/view2" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:layout_marginTop="10.0dip" />
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            
            <TextView 
                android:id="@+id/textView11" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="HEAERT BEAT" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
            <TextView 
                android:id="@+id/textView12" 
                android:layout_width="0.0dip"
                android:layout_height="wrap_content" 
                android:text="WEATHER" 
                android:layout_weight="1.0"
                style="@style/lbl_workout1" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0">
            
            <TextView 
                android:id="@+id/textView13" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="112bpm" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
            <TextView 
                android:id="@+id/textView14" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Sunny" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
        </LinearLayout>
        
        <View 
            android:id="@+id/view3" 
            android:background="@color/gray_border"
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:layout_marginTop="10.0dip" />
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            
            <TextView 
                android:id="@+id/textView15" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="DISTANCE" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
            <TextView 
                android:id="@+id/textView16" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="AVG. SPEED" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout1" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="5.0dip" 
            android:layout_weight="1.0">
            
            <TextView 
                android:id="@+id/textView17" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="3.14km" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
            <TextView 
                android:id="@+id/textView18" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="8.15km/h" 
                android:layout_weight="1.0" 
                style="@style/lbl_workout2" />
            
        </LinearLayout>
        
        <View 
            android:id="@+id/view4" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginBottom="10.0dip" />
    </LinearLayout>
</ScrollView>