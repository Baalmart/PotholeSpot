<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_bg</item>
    </style>
    <style name="tab_btn" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="tab_btn_small" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab_small</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="tab_btn_bottom" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab_bottom</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/trans_draw</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="custom_switch">
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/swith_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>
    <style name="yellow_btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/tab_bg_yellow</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:minWidth">200.0dip</item>
    </style>
    <style name="lbl_new_act_left" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="lbl_new_act_right" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/tab_bg_yellow</item>
    </style>
    <style name="btn_dark" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/theme_dark</item>
        <item name="android:padding">10.0dip</item>
    </style>
    <style name="btn_yellow" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tab_bg_yellow</item>
        <item name="android:padding">10.0dip</item>
    </style>
    <style name="lbl_workout1" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="lbl_workout2" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
