<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:background="@color/background" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/imageView1" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:src="@drawable/nav_image" 
            android:scaleType="fitXY"        
             />
        
        <!-- android:paddingLeft="60.0dip" -->
        
        <LinearLayout 
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/rect_with_shadow" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:id="@+id/vSwitch" 
                android:background="@drawable/swith_up_left" 
                android:paddingBottom="10.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                
                <TextView 
                    android:textColor="@color/white" 
                    android:gravity="center" 
                    android:id="@+id/textView1" 
                    android:layout_width="0.0dip" 
                    android:layout_height="wrap_content" 
                    android:text="Manual" 
                    android:layout_weight="1.0" />
                
                <ImageView 
                    android:id="@+id/imageView2" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"                    
                    android:src="@drawable/ic_gps"
                    android:layout_marginLeft="40.0dip" />
                
                <TextView 
                    android:textColor="@color/white" 
                    android:id="@+id/textView2" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Auto" 
                    android:gravity="center" 
                    android:layout_weight="1.0" />
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout 
            android:padding="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:id="@+id/textView3" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="GPS Precision Type" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_left" />
            
            <TextView 
                android:id="@+id/textView4" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Normal" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_right" />
        </LinearLayout>
        
        <View 
            android:id="@+id/view1" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" />
        
      <!--   <LinearLayout 
            android:padding="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:id="@+id/textView5" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Mode" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_left" />
            
            <TextView 
                android:id="@+id/textView6" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Auto" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_right" />
        </LinearLayout>
        
        <View 
            android:id="@+id/view2" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" /> -->
        
        <LinearLayout 
            android:padding="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:id="@+id/textView7" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Default Mode" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_left" />
            
            <TextView 
                android:id="@+id/textView8" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="Manual" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_right" />
        </LinearLayout>
        
        <View 
            android:id="@+id/view3" 
            android:background="@color/gray_border" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" />
        
        <LinearLayout 
            android:gravity="center_vertical" 
            android:padding="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip">
            
            <TextView 
                android:gravity="left" 
                android:id="@+id/textView9" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="GPS Precision Type" 
                android:layout_weight="1.0" 
                style="@style/lbl_new_act_left" />
            
            <Switch
                android:id="@+id/switch1" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:checked="true" 
                style="@style/custom_switch" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>