        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style 
        name="edittext" 
        parent="@android:style/Widget.Holo.Light.EditText">        
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/main_red_lt</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingLeft">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_10dp</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    
